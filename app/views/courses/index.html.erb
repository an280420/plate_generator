<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th>Volume</th>
      <th>Template</th>
      <th>User</th>
      <th colspan="3"></th>
      <th>Plate form</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.level %></td>
        <td><%= course.volume %></td>
        <td><%= course.template.body %></td>
        <td><%= course.user.name %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'DOWNLOAD PDF', course_path(course, format: :pdf), class: "button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

